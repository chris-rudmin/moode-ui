{
    "env": {
        "browser": true,
        "jest": true
    },
    "globals": {
        "page": true,
        "jestPuppeteer": true, 
        "port": true, 
        "provider": true, 
        "jasmine": true
    },
    "parser": "babel-eslint",
    "extends": ["airbnb"],
    "plugins": ["react"],
    "rules": {
        "no-console": "off",
        "no-alert": "off",
        "no-debugger": "off",
        "react/destructuring-assignment": 0,
        "react/jsx-filename-extension": [1, {"extensions":[".js"]}],
        "import/no-named-as-default": 0,
        "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true, "ObjectExpression": true } }],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "jsx-a11y/label-has-for": [ "error", { "required": { "some": [ "nesting", "id"  ] }}],
    }
}
